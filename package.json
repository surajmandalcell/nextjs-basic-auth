{
  "version": "0.1.3",
  "description": "Simple Basic Auth implemention for Next.js applications.",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": "jchiatt/nextjs-basic-auth",
  "homepage": "https://github.com/jchiatt/nextjs-basic-auth",
  "bugs": "https://github.com/jchiatt/nextjs-basic-auth/issues",
  "keywords": [
    "next",
    "nextjs",
    "basic auth",
    "auth"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "name": "nextjs-basic-auth",
  "author": "J.C. Hiatt",
  "module": "dist/nextjs-basic-auth.esm.js",
  "size-limit": [
    {
      "path": "dist/nextjs-basic-auth.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/nextjs-basic-auth.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/basic-auth": "^1.1.3",
    "@types/node": "^18.8.4",
    "husky": "^8.0.1",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  }
}
